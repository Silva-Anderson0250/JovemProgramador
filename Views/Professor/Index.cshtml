@model List<Professor>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">Cpf</th>
            <th scope="col">Disciplina</th>
        </tr>
    </thead>

    <tbody>

        @if (Model != null && Model.Any())
        {
            foreach (Professor professor in Model)
            {
                <tr>
                    <td>@professor.Disciplina</td>
                    <td>@professor.Nome</td>
                    <td>@professor.Cpf </td>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a type="submit" class="btn btn-primary" role="button" asp-controller="Professor" asp-action="Editar" asp-route-id="@professor.Id">Editar</a>
                        </div>
                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a type="submit" class="btn btn-primary" role="button" asp-controller="Professor" asp-action="DeleteProfessor" asp-route-id="@professor.Id">Excluir</a>
                        </div>
                    </td>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="text-center">
    <a class="btn btn-primary type="button" asp-controller="Professor" asp-action="AdicionarProfessor"> Adicionar Professor </a>

</div>